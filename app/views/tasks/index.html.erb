<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <%= check_box_tag 'task', 'true', task.completed %>
    <li><%= link_to(task.title, task_path(task.id)) %></li>
    <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
    <br>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_path %>
